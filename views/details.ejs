<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Foodie - Supper delicious Burger in town!</title>

  <!-- Favicon -->
  <link rel="shortcut icon" href="./favicon.svg" type="image/svg+xml">

  <!-- Custom CSS link -->
  <link rel="stylesheet" href="style.css">

  <!-- Google Font link -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&family=Rubik:wght@400;500;600;700&family=Shadows+Into+Light&display=swap" rel="stylesheet">

  <!-- Preload images -->
  <link rel="preload" as="image" href="./assets/images/hero-banner.png" media="min-width(768px)">
  <link rel="preload" as="image" href="./images/hero-banner-bg.png" media="min-width(768px)">
  <link rel="preload" as="image" href="./images/hero-bg.jpg">
</head>

<body id="top">

  <!-- HEADER -->
  <% if (user != null) { %>
  <header class="header" data-header>
    <div class="container">

      <h1>
        <a href="/index" class="logo">Restaurant Reservation <span class="span"> . <%= user %></span></a>
      </h1>

      <nav class="navbar" data-navbar>
        <ul class="navbar-list">
          <li class="nav-item">
            <a href="/index" class="navbar-link" data-nav-link>Home</a>
          </li>
          <li class="nav-item">
            <a href="/index#homesection" class="navbar-link" data-nav-link>Restaurant</a>
          </li>
          <li class="nav-item">
            <a href="/details" class="navbar-link" data-nav-link>Details</a>
          </li>
        </ul>
      </nav>

      <button class="btn btn-hover"><a href="logout">Logout</a></button>

      <button class="nav-toggle-btn" aria-label="Toggle Menu" data-menu-toggle-btn>
        <span class="line top"></span>
        <span class="line middle"></span>
        <span class="line bottom"></span>
      </button>
    </div>
  </header>
  <% } else { %>
  <header class="header" data-header>
    <div class="container">

      <h1>
        <a href="/index" class="logo">Restaurant Reservation<span class="span">.</span></a>
      </h1>

      <nav class="navbar" data-navbar>
        <ul class="navbar-list">
          <li class="nav-item">
            <a href="/index" class="navbar-link" data-nav-link>Home</a>
          </li>
        </ul>
      </nav>

      <button class="btn btn-hover"><a href="login">Login</a></button>

      <button class="nav-toggle-btn" aria-label="Toggle Menu" data-menu-toggle-btn>
        <span class="line top"></span>
        <span class="line middle"></span>
        <span class="line bottom"></span>
      </button>
    </div>
  </header>
  <% } %>

  <!-- SEARCH BOX -->
  <% if (user != null) { %>
  <main>
    <article>

      <!-- HERO -->
      <section class="hero" id="home" style="background-image: url('./images/hero-bg.jpg')">
        <div class="container">
          <% userList.forEach(function(data) { %>
          <div class="hero-content">
            <p class="hero-subtitle">Welcome <%= user %></p>
            <p class="hero-text">Reservation Details.</p>
            <div class="signup-form">
              <% if (data.fullname) { %>
              <!-- User details -->
              <h1 style="color: black;">Your Full Name: <%= data.fullname %></h1>
              <h1 style="color: black;">Your Email: <%= data.email %></h1>
              <h1 style="color: black;">Your Phone Number: <%= data.phone %></h1>
              <br>
              <h1 style="color: black;">Restaurant: <%= data.restaurant %></h1>
              <h1 style="color: black;">Reservation Date: <%= data.date %></h1>
              <h1 style="color: black;">Reservation Time: <%= data.time %></h1>
              <% if (data.table) { %>
              <!-- Table details -->
              <h1 style="color: black;">Your Table:
                <% if (data.table == 'table1') { %> Table 1
                <% } else if (data.table == 'table2') { %> Table 2
                <% } else if (data.table == 'table3') { %> Table 3
                <% } else if (data.table == 'table4') { %> Table 4
                <% } else if (data.table == 'table5') { %> Table 5
                <% } %>
              </h1>
              <% } %>
              <br>
              <h1 style="color: black;">Menus:<br></h1>
              <% var total = 0; var deposit = 20; for (var i = 0; i < data.menu.length; i++) { total += parseFloat(data.price[i]); %>
              <h1 style="color: black;"><%= data.menu[i] %> RM: <%= data.price[i] %><br></h1>
              <% } %>
              <br>
              <% var totalPriceWithDeposit = total + deposit; %>
              <h1 style="color: black;">Total Price for Menus: RM <%= total.toFixed(2) %></h1>
              <br>
              <h1 style="color: black;">Price Including Deposit(RM20): RM <%= totalPriceWithDeposit.toFixed(2) %></h1>

              <% } else { %>
              <h1>PLEASE START BOOKING BY CHOOSING THE CATEGORY</h1>
              <% } %>
            </div>
            <br>
            <br>
            <button type="button" id="editReservationButton" class="btn btn-hover"><a href="/index#homesection">Edit Reservation</a></button>
            <button type="button" id="proceedPaymentButton" class="btn btn-hover"><a href="/payment">Proceeed payment</a></button>
          </div>
          <% }); %>

          <figure class="hero-banner">
            <img src="./images/hero-banner-bg.png" width="820" height="716" alt="" aria-hidden="true" class="w-100 hero-img-bg">
            <img src="./images/hero-banner.png" width="700" height="637" loading="lazy" alt="Burger" class="w-100 hero-img">
          </figure>

        </div>
      </section>
    </article>
  </main>
  <% } else { %>
  <main>
    <article>

      <!-- HERO -->
      <section class="hero" id="home" style="background-image: url('./images/hero-bg.jpg')">
        <div class="container">

          <div class="hero-content">

            <p class="hero-subtitle">Welcome Guest</p>

            <h2 class="h1 hero-title">PLEASE LOGIN FIRST</h2>

            <p class="hero-text">To proceed, login first</p>

          </div>

          <figure class="hero-banner">
            <img src="./images/hero-banner-bg.png" width="820" height="716" alt="" aria-hidden="true" class="w-100 hero-img-bg">
            <img src="./images/hero-banner.png" width="700" height="637" loading="lazy" alt="Burger" class="w-100 hero-img">
          </figure>

        </div>
      </section>
    </article>
  </main>
  <% } %>

  <!-- BACK TO TOP -->
  <a href="#top" class="back-top-btn" aria-label="Back to top" data-back-top-btn>
    <ion-icon name="chevron-up"></ion-icon>
  </a>

  <!-- Custom JS link -->
  <script src="./assets/js/script.js" defer></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const toggleBtn = document.querySelector('[data-menu-toggle-btn]');
      const navbar = document.querySelector('[data-navbar]');

      toggleBtn.addEventListener('click', function () {
        navbar.classList.toggle('active');
      });
    });
  </script>

  <!-- Ionicon link -->
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>

</html>
